root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 120

[*.ts]
indent_size = 2

[*.html]
indent_size = 2

[*.{scss,css}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.yml]
indent_size = 2

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf